            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {};\n",
                  "try { json = pm.response.json(); } catch (e) {}\n",
                  "if (json.token) {\n",
                  "  pm.collectionVariables.set('token', json.token);\n",
                  "  console.log('Saved token to collection variable');\n",
                  "} else {\n",
                  "  console.log('No token found in response');\n",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
